{
  "name": "laforge",
  "version": "1.0.0",
  "description": "LaForge is a policy-first backend compiler that generates schemas, RLS policies, services, routes, and migrations from a single domain definition.",
  "type": "module",
  "bin": {
    "forge": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\" && tsc -p tsconfig.json",
    "test": "vitest run",
    "dev": "tsx watch cli/index.ts",
    "forge": "node ./dist/cli/index.js"
  },
  "dependencies": {
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@fastify/cors": "^8.4.2",
    "better-sqlite3": "^9.2.2",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "fastify": "^4.25.1",
    "pino-pretty": "^10.2.1",
    "picocolors": "^1.0.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.18.4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/diff": "^5.0.8",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "vitest": "^4.0.9"
  }
}
