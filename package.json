{
  "name": "@laforge-dev/cli",
  "version": "1.3.0",
  "description": "LaForge is a policy-first backend compiler that generates schemas, RLS policies, services, routes, and migrations from a single domain definition.",
  "type": "module",
  "main": "dist/packages/cli/index.js",
  "types": "dist/packages/cli/index.d.ts",
  "files": [
    "dist/packages/cli/**",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "laforge-dev-cli": "./dist/packages/cli/index.js"
  },
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\" && tsc -p tsconfig.json",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "vitest run --config vitest.config.ts",
    "test:frontend": "npm --prefix generated_frontend/frontend test",
    "build:auto-migrate": "tsc -p packages/auto-migrate/tsconfig.json",
    "test:auto-migrate": "vitest run --config packages/auto-migrate/vitest.config.ts",
    "dev": "tsx watch packages/cli/index.ts",
    "forge": "node ./dist/packages/cli/index.js",
    "smoke": "node scripts/smoke-fullstack.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@laforge-dev/auto-migrate": "workspace:*",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@fastify/cors": "^8.4.2",
    "better-sqlite3": "^9.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "fastify": "^4.25.1",
    "archiver": "^6.0.0",
    "mysql2": "^3.9.7",
    "pg": "^8.11.3",
    "picocolors": "^1.0.0",
    "pino-pretty": "^10.2.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/babel__traverse": "^7.18.4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/diff": "^5.0.8",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "vitest": "^4.0.9"
  }
}
