{
  "name": "@laforge-dev/auto-migrate",
  "version": "0.1.0",
  "description": "Experimental auto-migration utilities (sandbox runner, error classification).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\"",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
